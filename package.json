{
    "name": "use-css-transition",
    "version": "v1.0.0",
    "description": "A react hook for applying CSS transitions to multiple elements.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "test": "npm run build && npm run lint && npm run test:unittest",
        "build": "tsc",
        "clean": "rm -rf dist types coverage",
        "test:unittest": "tsc -p test && jest",
        "lint": "npm run lint:source && npm run lint:tests",
        "lint:source": "eslint --ext .ts --ext .tsx src",
        "lint:tests": "eslint --ext .ts --ext .tsx test",
        "prepare": "npm run build",
        "prepublishOnly": "npm run build && npm test",
        "semantic-release": "semantic-release"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --ext ts --ext tsx"
        ],
        "test/**/*.ts": [
            "eslint --ext ts --ext tsx"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jwalton/use-css-transition.git"
    },
    "keywords": [
        "react",
        "react-spring",
        "css",
        "transition"
    ],
    "author": {
        "name": "Jason Walton",
        "email": "dev@lucid.thedreaming.org",
        "url": "https://www.thedreaming.org"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/exegesis-js/jwalton/use-css-transition/issues"
    },
    "homepage": "https://github.com/jwalton/use-css-transition#readme",
    "devDependencies": {
        "@types/chai": "^4.2.15",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.2",
        "@types/react-dom": "^17.0.1",
        "@types/sinon": "^9.0.10",
        "@typescript-eslint/eslint-plugin": "^4.15.2",
        "@typescript-eslint/parser": "^4.15.2",
        "babel-jest": "^26.6.3",
        "chai": "^4.3.0",
        "chai-as-promised": "^7.1.1",
        "chai-jest": "^1.0.1",
        "coveralls": "^3.1.0",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "husky": "^4.3.8",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "marked": "^1.2.9",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "react": "^17.0.1",
        "semantic-release": "^17.4.0",
        "sinon": "^9.2.4",
        "ts-jest": "^26.5.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && lint-staged"
        }
    },
    "peerDependencies": {
        "react": ">= 16.8.0 < 18"
    }
}
